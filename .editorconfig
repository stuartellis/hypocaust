# Defaults for editor applications
#
# https://EditorConfig.org

# Specifies that this is the top-level EditorConfig
root = true

# Defaults for any type of file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

# Set default charset
[*.{makefile,py,tf}]
charset = utf-8

# Use 4 spaces for indentation
[*.py]
indent_style = space
indent_size = 4

# Makefiles require tab indentation
[Makefile]
indent_style = tab

[*.makefile]
indent_style = tab
